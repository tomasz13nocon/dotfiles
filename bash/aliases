#!/usr/bin/env bash

alias db='surreal start -u root -p root rocksdb:///home/user/.local/share/eu.freymedical.eye-expert/db/'

alias gs='git status'
alias gc='git commit'
alias gca='git commit -a'
alias gcm='git commit -m'
alias gcam='git commit -am'
alias gd='git diff'
alias gsh='git show --name-status'
alias ga='git add'
alias gch='git checkout'
alias gl='git log'
alias glo='git log --oneline'
alias glog='git log --oneline --graph'
alias gloga='git log --oneline --graph --all'
alias gch='git checkout'
alias gb='git branch'
alias gpl='git pull'
alias gps='git push'
alias gpsh='git push'
alias gst='git stash'
alias grb='git rebase'
alias grbc='git rebase --continue'
alias grba='git rebase --abort'
alias gr='git remote'
alias gpr='gprune'
alias gsw='git switch'
alias gprune='git fetch -p && git branch -vv | awk "/: gone]/{print \$1}" | xargs git branch -D'

alias cwr='cargo watch -q -c -x "run -q"'

alias v='vim'
# alias hx='helix'
alias h='helix'
#alias n='nap'
alias vim='nvim'
#alias ls='ls -l --color=auto --group-directories-first'
alias ls='lsd -l'
alias lsh='ls --block-size=h'
alias lsa='ls -A'
alias lss='ls --total-size'
cl() {
	cd $@ && ls
}
alias diff='diff --color'
alias myip='dig +short myip.opendns.com @resolver1.opendns.com'
alias ..='cd ..'
alias py='python'
alias pym='python -m'
alias py2='python2'
#alias feh='feh -x --auto-zoom'
#alias feh='feh --scale-down'
alias grep='grep --color=auto -Pn'
